{
  "name": "Taskllo - Tasks for Trello",
  "short_name": "Taskllo",
  "version": "1.3.0",
  "default_locale": "en",
  "description": "To Do list for your Trello tasks across all of your team boards",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "permissions": ["tabs", "https://trello.com/*/home"],
  "manifest_version": 2
}
